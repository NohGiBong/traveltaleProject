<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true">
    <RelativeLayout
        android:id="@+id/add_main_img"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#D9D9D9"
        >
        <ImageView
            android:id="@+id/img_add"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="120dp"
            android:src="@drawable/travel_img_add"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_title"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_radius"
        android:elevation="20dp"
        >
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp">
            <EditText
                android:id="@+id/input_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:text="@string/input_title"
                android:textColor="#A1A1A1"
                android:textSize="24dp"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_font"
                />

            <RelativeLayout
                android:id="@+id/input_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_title">
                <EditText
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/input_date"
                    android:textColor="#A1A1A1"
                    android:textSize="16dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/inter_font"/>
                <ImageButton
                    android:id="@+id/date_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/calendar"
                    android:alpha="0.5"
                    android:filter="true"
                    android:layout_toRightOf="@id/date_text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/input_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_date">
                <ImageButton
                    android:id="@+id/map_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/map"
                    android:alpha="0.5"
                    android:filter="true"
                    />
                <EditText
                    android:id="@+id/map_text"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/input_map"
                    android:textColor="#A1A1A1"
                    android:textSize="16dp"
                    android:layout_toRightOf="@id/map_btn"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/inter_font"
                    />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/submit_btn_card"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFE08A"
                app:cardUseCompatPadding="true"
                android:layout_below="@id/input_map">
                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFE08A"
                    android:text="여행 등록하기"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_font"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>