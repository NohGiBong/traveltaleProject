<?xml version="1.0" encoding="utf-8"?>
<!-- Auto layout, variables, and unit scale are not yet supported -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    >
    <!-- 리스트 헤더 -->
    <RelativeLayout
        android:id="@+id/list_header"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#8A9AE7"
        >
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/header_title"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="TRAVELTALE"
                android:textColor="#ffffff"
                android:fontFamily="@font/inter_font"
                android:textSize="35dp"
                android:textFontWeight="900"
                android:gravity="top"
                />

            <TextView
                android:id="@+id/list_intro"
                android:layout_width="323dp"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"
                android:text="@string/intro"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:gravity="top"
                android:layout_below="@+id/header_title"
                android:fontFamily="@font/inter_font"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_header">

        <androidx.cardview.widget.CardView
            android:id="@+id/list_item"
            android:layout_width="330dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"> <!-- 모서리의 반지름 설정 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <!-- item 이미지 -->
                <RelativeLayout
                    android:id="@+id/item_img"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/roppongi"
                        android:scaleType="centerCrop"
                        />
                </RelativeLayout>

                <!-- item 텍스트 부분 -->
                <RelativeLayout
                    android:id="@+id/item_txt"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/item_img"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    >
                    <!-- item 제목 -->
                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="230dp"
                        android:layout_height="20dp"
                        android:gravity="top"
                        android:textAppearance="@style/list_title"
                        android:text="@string/tale_title"
                        android:fontFamily="@font/inter_font"
                        />
                    <!-- item 메뉴 -->
                    <ImageButton
                        android:id="@+id/item_menu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/menu_btn1"/>
                    <!-- item date -->
                    <TextView
                        android:id="@+id/item_date"
                        android:layout_width="149dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/tale_date"
                        android:textAppearance="@style/list_date"
                        android:gravity="top"
                        android:layout_below="@id/item_title"
                        android:fontFamily="@font/inter_font"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 여행 추가하기 -->
        <ImageView
            android:id="@+id/item_add_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="480dp"
            android:elevation="4dp"
            android:src="@drawable/tale_add_btn"
            />
    </RelativeLayout>

</RelativeLayout>
