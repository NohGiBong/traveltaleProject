<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:stretchColumns="*">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/schedule_item_schedule_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/schedule_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_font"
                        android:hint="일정"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/schedule_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/kanit_font"
                        android:hint="일정"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/schedule_txt_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFB648"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="3dp">

                    <LinearLayout
                        android:id="@+id/card_content_layout"
                        android:layout_width="278dp"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/schedule_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/kanit_font"
                            android:hint="일정"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </TableRow>

            <!-- 두 번째 행 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFB648"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="3dp"
                    android:visibility="gone"> <!-- 병합할 두 번째 행의 카드뷰 -->

                </androidx.cardview.widget.CardView>

            </TableRow>

        </TableLayout>


        <GridLayout
            android:id="@+id/schedule_recyclerview_edit"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="1"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#4E4E4E81"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/chk_item_edit_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="110dp"
                        android:background="@drawable/edit" />

                    <ImageButton
                        android:id="@+id/chk_item_del_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60dp"
                        android:layout_toRightOf="@+id/chk_item_edit_btn"
                        android:background="@drawable/trash" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </RelativeLayout>

</LinearLayout>
