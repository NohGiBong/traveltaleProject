<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--     main    -->
    <style name="app_name">
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="start_txt">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">#616161</item>
    </style>

    <!--    register   -->
    <style name="regi_header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="nickname_header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="id_header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="regi_chk_id">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="pw_header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="check_success">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#1DDB16</item>
    </style>

    <style name="check_fail">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="email_header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="phone_header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinner_item" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:popupBackground">@color/white</item>
    </style>


    <!--    login   -->
    <style name="login_app_name">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_header">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_id_txt">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#9C9C9C</item>
    </style>

    <style name="login_pw_txt">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#9C9C9C</item>
    </style>

    <style name="login_q">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#989898</item>
    </style>

    <style name="regi_txt">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="list_item_title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#373737</item>
    </style>

    <style name="list_item_date">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="input">
        <item name="android:textColor">#A1A1A1</item>
    </style>

    <style name="submit_btn">
        <item name="android:background">#FFE08A</item>
    </style>

    <style name="RoundedCornersDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_custom_background</item>
    </style>

</resources>