<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/premium_vec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/main" />

    <TextView
        android:id="@+id/traveltale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:text="@string/app_name"
        android:fontFamily="@font/kanit_font"
        android:textFontWeight="900"
        android:textAlignment="center"
        android:textSize="80dp"
        android:lineHeight="60dp"
        android:includeFontPadding="false"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        android:shadowDx="2"
        android:shadowDy="2"
        android:textAppearance="@style/app_name" />

    <RelativeLayout
        android:id="@+id/start_btn_space"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/traveltale"
        android:layout_marginTop="300dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <Button
                android:id="@+id/start_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rectangle_button"
                android:backgroundTint="#FFFFFF"
                android:elevation="8dp" />

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/start">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/arrow_start" />
            </RelativeLayout>

            <TextView
                android:id="@+id/some_id"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="90dp"
                android:gravity="top"
                android:text="@string/start_txt"
                android:fontFamily="@font/kanit_font"
                android:textFontWeight="700"
                android:textAppearance="@style/start_txt" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>