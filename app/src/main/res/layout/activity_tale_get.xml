<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_item_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true">
    <!-- 메인 이미지 -->
    <RelativeLayout
        android:id="@+id/tale_get_img"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#D9D9D9"
        >
        <!-- 메뉴 버튼 -->
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menu_btn2" />
    </RelativeLayout>

    <!-- tale 바디 부분 -->
    <RelativeLayout
        android:id="@+id/tale_get_body"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_radius"
        android:elevation="20dp"
        >
        <!-- 여행 제목 -->
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <EditText
                android:id="@+id/tale_get_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="@string/tale_title"
                android:textSize="22dp"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_font"
                android:textFontWeight="900"
                />

            <!-- 여행 일자 수정 -->
            <RelativeLayout
                android:id="@+id/tale_get_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tale_get_title"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tale_date"
                    android:textSize="13dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/inter_font"/>
            </RelativeLayout>

            <!-- 위치 -->
            <RelativeLayout
                android:id="@+id/tale_get_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tale_get_date">
                <ImageView
                    android:id="@+id/map_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/map"
                    android:filter="true"
                    />
                <EditText
                    android:id="@+id/map_txt"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/tale_location"
                    android:textSize="13dp"
                    android:layout_toRightOf="@id/map_img"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/inter_font"
                    />
            </RelativeLayout>

            <!-- tale 내용 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tale_get_map"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:fontFamily="@font/inter_font"
                android:text="@string/tale_content"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>